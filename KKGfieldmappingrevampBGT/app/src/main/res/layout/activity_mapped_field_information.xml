<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mappedFieldInformation">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:id="@+id/scatterplot" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="410dp"
        android:text="Field Size(ha):"
        android:textColor="#5c35e7"
        android:textStyle="italic"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/field_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="78dp"
        android:textColor="#2f2a41"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="410dp"
        android:text="Field Name:"
        android:layout_marginLeft="108dp"
        android:textStyle="italic"

        android:textColor="#5c35e7"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/field_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="58dp"
        android:textColor="#2f2a41"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="410dp"
        android:text="Temp ID:"
        android:layout_marginLeft="258dp"
        android:textStyle="italic"

        android:textColor="#5c35e7"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/temp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="308dp"
        android:textColor="#2f2a41"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/member_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="425dp"
        android:textColor="#2f2a41"
        android:textSize="12sp" />

    <Button
        android:id="@+id/take_picture"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="445dp"

        android:onClick="finish"
        android:layout_centerHorizontal="true"
        android:text="FINISH"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/colorPrimary" />

