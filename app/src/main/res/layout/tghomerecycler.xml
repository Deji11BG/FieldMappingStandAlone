<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/parent_layout"
    android:paddingStart="@dimen/tfm_home_grid_spacing"
    android:paddingEnd="@dimen/tfm_home_grid_spacing"
    android:padding="@dimen/tfm_text_view_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/leader_card_image_height"
        android:layout_height="match_parent"
        android:clickable="false"
        android:src="@drawable/avatar"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/textColorPrimary"
        android:layout_marginEnd="@dimen/tfm_text_view_padding"/>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:weightSum="1.0"
       android:orientation="horizontal"
       >



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.99"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/leader_name_switch_separation">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:textSize="17sp"
                    android:text="@string/member_name"
                    android:layout_gravity="start"/>


            </LinearLayout>





            <!--<com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:useMaterialThemeColors="false"
                android:text="@string/leader_name"
                android:textSize="17sp"/>-->

        </LinearLayout>

        <TextView
            android:id="@+id/member_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member_ID: IK0000000001"/>
        <TextView
            android:id="@+id/Locationtghome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: ward"/>



        <TextView
            android:id="@+id/ik_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IK Number: IK000001"/>
        <TextView
            android:id="@+id/phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IK Number: IK000001"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/fieldmapped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mapped: 1.2/2"/>



    </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_gravity="center_vertical"
           android:layout_weight="0.01">

    <ImageView
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:onClick="call"
        android:id="@+id/callImage"
        android:background="@drawable/ic_call_black_24dp"
        />
       </LinearLayout>
   </LinearLayout>
</LinearLayout>
</LinearLayout>